@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_AdminLayoutHeaderComponentPartial")

<body>
	<div class="container-xxl position-relative bg-white d-flex p-0">
		
		@await Component.InvokeAsync("_AdminLayoutMenuComponentPartial")


		<div class="content">
			<nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
				<a href="#" class="navbar-brand d-flex d-lg-none me-4">
					<h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
				</a>
				<a href="#" class="sidebar-toggler flex-shrink-0">
					<i class="fa fa-bars"></i>
				</a>
				<form class="d-none d-md-flex ms-4">
					<input class="form-control border-0" type="search" placeholder="Ara">
				</form>
				<div class="navbar-nav align-items-center ms-auto">
					
					@await Component.InvokeAsync("_AdminLayoutMessagesComponentPartial")

					@await Component.InvokeAsync("_AdminLayoutNotificationsComponentPartial")

					@await Component.InvokeAsync("_AdminLayoutCurrentUserComponentPartial")

				</div>
			</nav>

			@RenderBody()

			<div class="container-fluid pt-4 px-4">
				<div class="bg-light rounded-top p-4">
					<div class="row">
						<div class="col-12 col-sm-6 text-center text-sm-start">
							&copy; <a href="#">OlayAnindan.com</a>, tüm hakları saklıdır.
						</div>
					</div>
				</div>
			</div>
		</div>

		<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
	</div>

	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/admin/lib/chart/chart.min.js"></script>
	<script src="~/admin/lib/easing/easing.min.js"></script>
	<script src="~/admin/lib/waypoints/waypoints.min.js"></script>
	<script src="~/admin/lib/owlcarousel/owl.carousel.min.js"></script>
	<script src="~/admin/lib/tempusdominus/js/moment.min.js"></script>
	<script src="~/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
	<script src="~/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

	<script src="~/admin/js/main.js"></script>
</body>

</html>

@{
	Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_HomeLayoutHeaderComponentPartial")

<body>
	@await Component.InvokeAsync("_HomeLayoutNavbarComponentPartial")

	@await Component.InvokeAsync("_HomeLayoutMenuComponentPartial")

	<div class="container-fluid">
		<div class="container">
			<div class="row">
				@RenderBody()

				<div class="col-lg-4">

					@await Component.InvokeAsync("_HomeLayoutFollowUsComponentPartial")

					@await Component.InvokeAsync("_HomeLayoutAdsComponentPartial")

					@await Component.InvokeAsync("_HomeLayoutTrendNewsComponentPartial")

					@await Component.InvokeAsync("_HomeLayoutSubscribeComponentPartial")

					@await Component.InvokeAsync("_HomeLayoutTagsComponentPartial")

				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid bg-dark pt-5 px-sm-3 px-md-5 mt-5" >
		<div class="row py-4" style="justify-content:space-between">
			<div class="col-lg-3 col-md-6 mb-5">
				@await Component.InvokeAsync("_HomeLayoutFooterContactComponentPartial")

				@await Component.InvokeAsync("_HomeLayoutFooterSocialMediaComponentPartial")
			</div>

			@await Component.InvokeAsync("_HomeLayoutFooterLatestNewsComponentPartial")

			@await Component.InvokeAsync("_HomeLayoutFooterCategoriesComponentPartial")
			
			
		</div>
	</div>
	
	@await Component.InvokeAsync("_HomeLayoutCopyrightNoticeComponentPartial")


	@await Component.InvokeAsync("_HomeLayoutJavascriptComponentPartial")
</body>

</html>


@using OA.EntityLayer.Requests.AdRequests
@model List<ResultAdRequest>

<div class="mb-3">
	<div class="section-title mb-0">
		<h4 class="m-0 text-uppercase font-weight-bold">Reklam</h4>
	</div>

	@foreach (var item in Model)
	{
		<div class="bg-white text-center border border-top-0 p-3">
			<a href="@item.AdsUrl">
				<img class="img-fluid" src="@Url.Content(item.ImageUrl)" alt="" style="height:100%;width:100%">
			</a>
		</div>
	}

</div>
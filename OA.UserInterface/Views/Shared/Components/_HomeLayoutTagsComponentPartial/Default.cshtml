@using OA.EntityLayer.Requests.ArticleTagRequests
@model List<ResultArticleTagRequest>

@if (TempData["SelectedArticleId"] != null)
{
	<div class="mb-3">
		<div class="section-title mb-0">
			<h4 class="m-0 text-uppercase font-weight-bold">Haberin Etiketleri</h4>
		</div>
		<div class="bg-white border border-top-0 p-3">
			<div class="d-flex flex-wrap m-n1">
				@foreach (var item in Model)
				{
					<a href="#" class="btn btn-sm btn-outline-secondary m-1">@item.TagName</a>
				}
			</div>
		</div>
	</div>
}
else
{
	<div class="mb-3">
		<div class="section-title mb-0">
			<h4 class="m-0 text-uppercase font-weight-bold">Etiketler</h4>
		</div>
		<div class="bg-white border border-top-0 p-3">
			<div class="d-flex flex-wrap m-n1">
				@foreach (var item in Model)
				{
					<a href="#" class="btn btn-sm btn-outline-secondary m-1">@item.TagName</a>
				}
			</div>
		</div>
	</div>
}


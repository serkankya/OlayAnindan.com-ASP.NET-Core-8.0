@using OA.EntityLayer.Requests.RoleRequests

@{
	ViewData["Title"] = "InsertUser";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-lg-6">
			<div class="card shadow-lg">
				<div class="card-header bg-primary text-white text-center">
					<h3>Kullanıcı Ekle</h3>
				</div>
				<div class="card-body">
					<form asp-action="InsertUser" asp-controller="User" asp-area="Admin" method="post">

						<div class="form-group mb-3">
							<label for="RoleId">Rol Seçin</label>
							<select asp-for="RoleId" class="form-control" id="RoleId" name="RoleId" required>
								<option value="">Rol Seçin...</option>
								@foreach (var role in (ViewBag.Roles as List<ResultRoleRequest>)!)
								{
									<option value="@role.RoleId">@role.RoleName</option>
								}
							</select>
						</div>

						<div class="form-group mb-3">
							<label for="Username" class="form-label">Kullanıcı Adı:</label>
							<input type="text" name="Username" class="form-control" placeholder="Kullanıcı Adı Girin" />
						</div>

						<div class="form-group mb-3">
							<label for="PasswordHash" class="form-label">Şifre:</label>
							<input type="password" name="PasswordHash" class="form-control" placeholder="Şifre Girin" />
						</div>

						<div class="form-group mb-3">
							<label for="Email" class="form-label">E-posta:</label>
							<input type="email" name="Email" class="form-control" placeholder="E-posta Girin" />
						</div>

						<div class="form-group mb-3">
							<label for="Biography" class="form-label">Biyografi:</label>
							<textarea name="Biography" class="form-control" rows="3" style="max-height:300px" placeholder="Biyografi Girin"></textarea>
						</div>

						<div class="form-group mb-3">
							<label for="FullName" class="form-label">İsim ve Soyisim:</label>
							<input type="text" name="FullName" class="form-control" placeholder="İsim ve Soyisim Girin" />
						</div>

						<div class="form-group mb-4">
							<label for="ImageUrl" class="form-label">Kullanıcı Resmi Yükle:</label>
							<input type="file" name="ImageUrl" class="form-control" />
						</div>

						<div class="text-center">
							<input type="submit" class="btn btn-primary w-100" value="Kullanıcıyı Ekle" />
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@using OA.EntityLayer.Requests.CommentRequests
@model List<ResultCommentRequest>

@{
	ViewData["Title"] = "LatestComments";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/admin/css/comment.css" rel="stylesheet">

<div class="container comment-page">
	<h3 class="text-center mb-4">Yorum Yönetimi</h3>

	@foreach (var item in Model)
	{
		if (item.Status == true)
		{
			<div class="comment-item">
				<h5>Kullanıcı : @item.Username</h5>
				<p href="#"><strong>Haber : </strong>: @item.Title</p>
				<p><em>Yorum:</em> @item.CommentText</p>
				<div class="comment-actions">
					<a class="btn btn-edit" href="#" >Habere Git</a>
					<a class="btn btn-danger" href="/Admin/Comment/RemoveComment/@item.CommentId">Yorumu Sil</a>
				</div>
			</div>
		}
	}

	<br /> <br />
	<h3>Silinenler</h3>
	@foreach (var item in Model)
	{
		if (item.Status == false)
		{
			<div class="comment-item">
				<h5>Kullanıcı : @item.Username</h5>
				<p href="#"><strong>Haber : </strong>: @item.Title</p>
				<p><em>Yorum:</em> @item.CommentText</p>
				<div class="comment-actions">
					<a class="btn btn-edit" href="#">Habere Git</a>
					<a class="btn btn-info" href="/Admin/Comment/ActivateComment/@item.CommentId">Aktifleştir</a>
				</div>
			</div>
		}
	}
</div>




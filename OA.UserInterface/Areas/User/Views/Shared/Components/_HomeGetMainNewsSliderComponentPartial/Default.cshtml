@using OA.EntityLayer.Requests.ArticleRequests
@model List<ResultArticleRequest>

<div class="container-fluid pt-5 mb-3">
	<div class="container">
		<div class="section-title">
			<h4 class="m-0 text-uppercase font-weight-bold">İlginizi Çekebilecek Haberler</h4>
		</div>
		<div class="owl-carousel news-carousel carousel-item-4 position-relative">

			@foreach (var item in Model)
			{
				<div class="position-relative overflow-hidden" style="height: 300px;">
					<img class="img-fluid h-100" src="@Url.Content(item.MainMediaPath)" style="object-fit: cover;">
					<div class="overlay">
						<div class="mb-2">
							<a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
							   href="">@item.CategoryName</a>
							<a class="text-white" href=""><small>@item.CreatedAt</small></a>
						</div>
						<a class="h6 m-0 text-white text-uppercase font-weight-semi-bold" href="#">@item.Title</a>
					</div>
				</div>
			}

		</div>
	</div>
</div>